<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="home1.fiap.com.br.botoes.MainActivity">


    <TextView
        android:text="@string/resultado"
        android:textSize="@dimen/txtP"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="@dimen/marTop"
        android:layout_marginBottom="@dimen/marBot"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <Button
            android:text="@string/txt1"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/branco"
            android:onClick="incrementar"/>

        <Button
            android:text="@string/txt2"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/branco"
            android:onClick="decrementar"/>


    </RelativeLayout>


</LinearLayout>
